@model BonDTO


<form asp-action="BonDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Code</label>
            </div>
            <input asp-for="Id" hidden />
            <div class="col-10 pb-3">
                <input asp-for="Code" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Off" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">

                <a asp-action="BonIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>
 
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
