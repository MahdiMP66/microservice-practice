@model List<BonDTO>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Coupons List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Bon" asp-action="BonCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Coupon</a>

            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th class="text-white">
                        Coupon Code
                    </th>
                    <th class="text-white">
                        Percentage
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody >
                @foreach (var item in Model)
                {
                <tr class="text-white">
                    <td class="text-white-50" >
                        @item.Code
                    </td>
                    <td class="text-white-50">
                        @((item.Off / 100).ToString("P"))
                    </td>
                    
                    <td>
                        <a asp-action="BonDelete" asp-route-bonId="@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>

</div>